    <hr>

    <div class="row">
        <div class="col-12 col-md-8">
            <div class="title">
                <h1 class="display-4">Eat these burgers</h1>

            </div>
            <hr><br>

            <form action="/burgers/create" method="POST">
                <div class="input-group mb-3">
                    <input type="text" name="burger_name" class="form-control btn btn-outline-danger btn-lg"
                        id="enter_text" placeholder="Create Your Own Sandwich Here">

                    <div class="input-group-append">
                        <button type="submit" class="btn btn btn-outline-danger" type="button"
                            id="button-addon2 text-enter-button">Submit</button>
                    </div>
                </div>
            </form>

<br>

            {{#each data}}
            {{#unless this.devoured}}

            <form method="POST" action="/burgers/update?_method=PUT">
                <input type="hidden" name="burger_id" type="text" value={{this.id}}><button type="submit"
                    class="btn btn-outline-warning btn-lg btn-block">{{this.burger_name}}</button>
            </form><br>

            {{/unless}}
            {{/each}}

            <br>
            <hr><br>

        </div>
        <div class="col-6 col-md-4">
            <div class="title">
                <h1 class="display-4">Devoured goodness</h1>
            </div>
            <hr><br>
            {{#each data}}
            {{#if this.devoured}}
            <input type="text" class="btn btn-outline-success btn-block" placeholder="{{this.burger_name}}" disabled>
            {{/if}}
            {{/each}}

        </div>
    </div>


</div>